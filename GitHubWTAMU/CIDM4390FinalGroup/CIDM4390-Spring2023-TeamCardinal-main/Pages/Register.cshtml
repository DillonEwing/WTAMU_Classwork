@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1>Register</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" asp-page-handler="EventSelect">
            <div class="form-group">
                <select asp-for="EventIdHolder" asp-items="@Model.EventList" class="form-select" onchange="this.form.submit();">
                    <option disabled selected>Select Event</option>
                </select>
            </div>
        </form>
        <form method="post" asp-page-handler="SpeakerSelect">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <select asp-for="NewRegistration.SessionID" asp-items="@Model.SpeakerList" class="form-select">
                    <option disabled selected>Select Speaker</option>
                </select>
            </div>
                <input asp-for="NewRegistration.EventID" class="form-control" value="@Model.EventIdHolder" hidden readonly/>
                <input asp-for="NewRegistration.UserID" class="form-control" value="holder" hidden readonly/>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to Home</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}